<form bindsubmit="formBindSubmit">
  <view class="container form-group">
    <view class="bind-form">
      <text class="bind-text">请输入QQ号码</text>
      <input name="qq" type="text" placeholder="QQ" maxlength="12" />
    </view>
    <view class="bind-form">
      <text class="bind-text">请输入真实姓名</text>
      <input name="name" type="text" placeholder="姓名" maxlength="10" />
    </view>
    <view>
      <button formType="submit" class="bind-btn">绑定</button>
    </view>
    <view class="bind-tip">{{tip}}</view>
    <text class="bind-note">使用说明：
      <br/> 需加入公司订餐QQ群：424569204 并修改昵称为真实姓名</text>
  </view>
</form>
<loading hidden="{{hiddenLoading}}">正在绑定</loading>